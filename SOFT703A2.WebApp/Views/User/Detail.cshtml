@model SOFT703A2.Infrastructure.Contracts.ViewModels.User.IDetailUserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="col-md-6 offset-md-3">
    <h2>User Information</h2>
    <form asp-controller="User" asp-action="Update" method="post" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id"/>
        <table>
            <tbody>
            <tr>
                <td>
                    <div class="form-group">
                        <label asp-for="FirstName">FirstName</label>
                        <input asp-for="FirstName" class="form-control" value="@Model.FirstName" placeholder="FirstName"/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="LastName">LastName</label>
                        <input asp-for="LastName" class="form-control" value="@Model.LastName" placeholder="LastName"/>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" value="@Model.Email" placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">PhoneNumber</label>
                        <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" placeholder="PhoneNumber"/>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="SelectedRole">Role</label>
                        <select asp-for="SelectedRole" class="form-control" id="SelectedRole">
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role.Value">@role.Text</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedRole" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>

        <div class="col-md-4"></div>
        <button type="submit" class="btn btn-primary bg-green btn-custom">Update</button>
        <div class="col-md-4"></div>
    </form>


    <h2>User Trolleys</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var trolley in Model.Trolleys)
        {
            <tr>
                <td>@trolley.TransactionDate</td>
                <td>@trolley.Total</td>
                <td>
                    <a href="@Url.Action("Detail", "Trolley", new { id = trolley.Id })" class="btn btn-primary">Detail</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>