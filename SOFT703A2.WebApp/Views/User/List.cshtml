@model SOFT703A2.Infrastructure.Contracts.ViewModels.User.IListUserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<script>
    var filterUsersPath = '@Url.Action("FilterUsers", "User")'
    var detailsPath = '@Url.Action("Detail", "User")'
    var deletePath = '@Url.Action("Delete", "User")'
</script>
<script src="/js/User/List.js"></script>
<h2>Users</h2>
<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            <input type="text" id="userName" class="form-control" placeholder="Search by Name">
        </div>
    </div>
    <div class="col-md-1">
        <button id="searchButton" class="btn btn-primary bg-green btn-custom" style="width: 70px;">Search</button>
    </div>
    <div class="col-md-1">
        <a href="@Url.Action("Add", "User")" class="btn btn-primary bg-green btn-custom" style="width: 70px;">Add</a>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="visitsCheckbox">
            <label class="form-check-label" for="visitsCheckbox">Search top Visits</label>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="emailCheckbox">
            <label class="form-check-label" for="emailCheckbox">Search by Email</label>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="phoneCheckbox">
            <label class="form-check-label" for="phoneCheckbox">Search by Phone</label>
        </div>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-1">
        <div class="dropdown">
            <button id="sortButton" class="btn text-white bg-green btn-custom dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 70px;">Sort</button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item text-dark" id="nameSort" href="#">Surname</a>
                </li>
                <li>
                    <a class="dropdown-item text-dark" id="loginSort" href="#">Login count</a>
                </li>
                <li>
                    <a class="dropdown-item text-dark" id="usernameSort" href="#">Username</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <table class="table">
        <thead>
        <tr>

            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Logins</th>
        </tr>
        </thead>
        <tbody id="user-table-body">
        @foreach (var users in Model.Users)
        {
            <tr>

                <td>@users.UserName</td>
                <td>@users.Email</td>
                <td>@users.PhoneNumber</td>
                <td>@users.FirstName</td>
                <td>@users.LastName</td>
                <td>@users.Logins.Count</td>
                <td>
                    <a href="@Url.Action("Detail", "User", new { id = users.Id })" class="btn btn-primary btn-custom">Detail</a>
                    <a href="@Url.Action("Delete", "User", new { id = users.Id })" class="btn btn-danger btn-custom">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>