<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/Shared/_layout.css" asp-append-version="true"/>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/MarketPlace/Index.js"></script>


<div class="row" xmlns="http://www.w3.org/1999/html">
    <!-- First Row: Product Search Bar and Button -->
    <div class="col-md-10">
        <div class="form-group">
            <input type="text" id="productName" class="form-control" placeholder="Search by Name">
        </div>
    </div>
    @if (ViewBag.ShowAddButton)
    {
        <div class="col-md-1">
            <button id="searchButton" class="btn btn-primary bg-green btn-custom" style="width: 70px;">Search</button>
        </div>
        <div class="col-md-1">
            <a href="@Url.Action("Add", "Product")" class="btn btn-primary bg-green btn-custom" style="width: 70px;">Add</a>
        </div>
    }
    else
    {
        <div class="col-md-2">
            <button id="searchButton" class="btn btn-primary bg-green btn-custom" style="width: 150px;">Search</button>
        </div>
    }

</div>
<div class="row">
    <div class="col-md-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="categoryCheckbox">
            <label class="form-check-label" for="categoryCheckbox">Search by Category</label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="promotedCheckbox">
            <label class="form-check-label" for="promotedCheckbox">Search Promoted Products</label>
        </div>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
        <div class="dropdown">
            <button id="sortButton" class="btn text-white bg-green btn-custom dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 70px;">Sort</button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item text-dark" id="toHighestPriceSort" href="#">Price↑</a></li>
                <li><a class="dropdown-item text-dark" id="toLowestPriceSort" href="#">Price↓</a></li>
                <li><a class="dropdown-item text-dark" id="nameSort" href="#">Name</a></li>
                <li><a class="dropdown-item text-dark" id="categorySort" href="#">Category</a></li>
            </ul>
        </div>
    </div>
</div>